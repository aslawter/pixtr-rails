<h2>This gallery proudly owned by <%= @gallery.user.email %>
<h2><%= @gallery.name %></h2>
<p><%= @gallery.description %></p>
<%= link_to "Edit this gallery", [:edit, @gallery] %>
<%= link_to "Delete this gallery", @gallery, method: :delete %>
<%= link_to "Add an image", "/galleries/#{@gallery.id}/images/new" %>

<% @gallery.images.each do |image| %>
	<%= image_tag image.url %>
	<%= link_to "Edit image", [:edit, @gallery, image] %>
<% end %>
