
<div><%= link_to "Create a new group", [:new, :group] %></div>

<h2>All Groups</h2>
  <ul>
    <% @groups.each do |group| %>
      <li><%= render group %></li>
      <% if ! current_user.member?(group) %>
        <%= form_for [group, @group_membership] do |form| %>
        <%= form.submit "Join this group" %>
      <% end %>
      <% end %>
      </li>
    <% end %>
  </ul>

<h2>Your Groups</h2>
  <ul>
    <% @my_groups.each do |group| %>
      <li><%= render group %>
      </li>
    <% end %>
  </ul>
